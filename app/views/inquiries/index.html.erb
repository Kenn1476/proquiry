<div class="contents row">
  <% @inquiries.each do |inquiry| %>
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', inquiry_path(inquiry.id) %>
          </li>
          <li>
            <%= link_to '編集', edit_inquiry_path(inquiry.id) %>
          </li>
          <li>
            <%= link_to '削除', inquiry_path(inquiry.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>

      <p><%= inquiry.reference_number %></p>
      <span class="name">
        <%= inquiry.invoice_number%>
        <%= inquiry.customer_email %>
        <%= inquiry.text %>
      </span>
    </div>
  <% end %>
</div>